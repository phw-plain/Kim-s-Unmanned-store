    <style name="Theme.BarCodeReader" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>          <!-- action bar text color -->
        <item name="colorPrimaryVariant">@color/orange_700</item>   <!-- status bar text color -->
        <item name="colorOnPrimary">@color/yellow_100</item>
        <item name="android:textColor">#000000</item>               <!-- action bar text color -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
